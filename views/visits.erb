<h2 align="center" ><i>Запись на сеанс к стилисту</i></h2><br/>
<script type="text/javascript">
$(function(){

  $('#colorpicker').simplecolorpicker();
  $('#datetimepicker').datetimepicker();
});

</script>

<div class="parent">
  <div class="child">
    <div class="w-100 p-3">  
      <form action="/visits" method="POST" align="center">
        <div class="shadow-lg p-3 mb-5 bg-white rounded">
          <div class="w-100 p-3" style="background-color: #eee;">
            <div class="form-group">
              <label>Ваше имя</label>
              <input name="username" type="text" class="form-control" placeholder="Введите Ваше имя" value="<%= @username %>">
            </div>
            <div class="form-group">
              <label>Номер телефона</label>
              <input name="phone" type="text" class="form-control" placeholder="Введите Ваш телефон" value="<%= @phone %>">
            </div>
            <div class="form-group">
              <label>Парикмахер</label>
              <select  name="master" class="form-control">

                <% @masters.each do |item| %>

                <option <%= @master == item['Master'] ? 'selected' : '' %>><%= item['Master'] %></option>

                <% end %>

              </select>  
            </div>
            <div class="form-group">
              <label>Выберите цвет волос:</label>
              <select name="color" id="colorpicker">
                <option value="#7bd148">Green</option>
                <option value="#5484ed">Bold blue</option>
                <option value="#a4bdfc">Blue</option>
                <option value="#46d6db">Turquoise</option>
                <option value="#7ae7bf">Light green</option>
                <option value="#51b749">Bold green</option>
                <option value="#fbd75b">Yellow</option>
                <option value="#ffb878">Orange</option>
                <option value="#ff887c">Red</option>
                <option value="#dc2127">Bold red</option>
                <option value="#dbadff">Purple</option>
                <option value="#e1e1e1">Gray</option>
              </select>
            </div>
            <div class="form-group">
              <label>Дата и время</label>
              <input id="datetimepicker" name="datetime" type="text" class="form-control" placeholder="Введите дату и время" value="<%= @datetime%>">
            </div>
            <span style="color:#7e5a25; font-size:14pt; border:2px solid #e1d4ae; background:#e8e3d4; padding:5px;">
              <span id="time">00:00:00</span>
            </span>
            <br>
            <br>
            <button type="submit" class="btn btn-outline-primary">ЗАПИСАТЬСЯ </button>  
          </div>  
        </div>
      </form>
    </div>      
  </div>
  <div class="child">
    <div class="w-100 p-3">
      <div class="shadow-lg p-3 mb-5 bg-white rounded">
        <div class="w-100 p-3" style="background-color: #eee;">
          <table class="table">
            <caption>Список посетителей</caption>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Имя</th>
                <th scope="col">Парикмахер</th>
                <th scope="col">Дата и время</th>
              </tr>    
            </thead>
            
            <% @results.each do |row| %>
            
            <tbody>
            <tr>
            <th scope="row"><%= row['id'] %></th>
            <td><%= row['User'] %></td>
            <td><%= row['Datestamp'] %></td>
            <td><%= row['Master'] %></td>
            </tr>
            
            <% end %>

          </tbody>
          </table>  
        </div>  
      </div>  
    </div>  
  </div>
</div>





































<script type="text/javascript">  
setInterval(function () {  
 date = new Date(),  
 h = date.getHours(),  
 m = date.getMinutes(),  
 s = date.getSeconds(),  
 h = (h < 10) ? '0' + h : h,  
 m = (m < 10) ? '0' + m : m,  
 s = (s < 10) ? '0' + s : s,  
 document.getElementById('time').innerHTML = h + ':' + m + ':' + s;  
}, 1000);
</script>

